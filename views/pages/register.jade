doctype
html
	head
		title #{title}
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width')
		script(src='/bundle.js')
		link(href='./style/publicStyle.css' rel='stylesheet' type='text/css')
		link(href='./bower_components/bootstrap/dist/css/bootstrap.css' rel='stylesheet' type='text/css')
		link(href='./style/register.css' rel='stylesheet' type='text/css')
	body
		include ../includes/purehead.jade
		div.reg-main
			div.reg-header
				div.regheader-title 
					h3 电子商城
					span 欢迎注册
				div.regheader-out
					span 已有账号？
					a(href='javascript:;') 请登录
			div.reg-content
				div.regcon-main
					form(method='post' action="/aaa")
						div
							label 用户名
							input(type='text' placeholder='您的账户名和登录名' name="uname")#input-usrname
							//-span.regcon-info 支持中文字母数字的组合4-20个字符
							//-span.regcon-alert 格式错误，仅支持汉字、字母、数字、“-”“_”的组合
						div
							label 设置密码
							input(type='password' placeholder='建议至少使用两种字符组' name="upsw")#input-psw
							//-span.regcon-info 建议使用数字/字母和符号两种及两种以上的的组合
							//-span.regcon-info 安全强度适中，可以使用三种以上的组合来提高安全强度
							//-span.regcon-info 有被盗风险,建议使用字母、数字和符号两种及以上组合
							//-span.regcon-info 你的密码很安全
						div
							label 确认密码
							input(type='password' placeholder='请再次输入密码' name="upsw2")#input-pswconfirm
							//-span.regcon-info 请再次输入密码
							//-span.regcon-alert 两次密码输入不一致
						div
							label 手机号
							input(type='text' placeholder='请输入手机号' name="uphone")#input-uphone
							//-span.regcon-info 完成验证后，你可以用该邮箱登录和找回密码
							//-span.regcon-alert 格式有误
						div 
							label 收货人昵称
							input(type='text' placeholder='请输入收货人昵称' name="rname")#input-rname
							//-span.regcon-info 完成验证后，你可以用该手机登录和找回密码
							//-span.regcon-alert 格式有误
						div
							label 收货人联系方式
							input(type='text' placeholder='请输入收货人联系方式' name="rphone")#input-rphone
						div
							label 收货人地址
							input(type='text' placeholder='请输入收货人地址' name="raddress")#input-raddress
							span.regcon-info
							span.regcon-alert
						input(type='checkbox')
						span 我已阅读并同意《商城用户注册协议》
						span#submit 提交
						//-input(type='submit' )
		include ../includes/footer.jade
		script(src='./bower_components/jquery/dist/jquery.min.js' type='text/javascript')
		script(src='./script/register.js' type='text/javascript')