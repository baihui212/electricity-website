doctype
html
	head
		title #{title}
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width')
		script(src='/bundle.js')
		link(href='./style/publicStyle.css' rel='stylesheet' type='text/css')
		link(href='./bower_components/bootstrap/dist/css/bootstrap.css' rel='stylesheet' type='text/css')
		link(href='./style/register.css' rel='stylesheet' type='text/css')
	body
		include ../includes/purehead.jade
		div.reg-main
			div.reg-header
				div.regheader-title 
					h3 电子商城
					span 商品信息管理
			div.reg-content
				div.regcon-main
					form(method='post' action="/aaa")
						div
							label 商品名 
							input(type='text' placeholder='请输入商品名' name="gname")#input-gname
							//-span.regcon-info 支持中文字母数字的组合4-20个字符
							//-span.regcon-alert 格式错误，仅支持汉字、字母、数字、“-”“_”的组合
						div
							label 副标题
							input(type='text' placeholder='请输入副标题' name="subtitle")#input-gsubtitle
							//-span.regcon-info 建议使用数字/字母和符号两种及两种以上的的组合
							//-span.regcon-info 安全强度适中，可以使用三种以上的组合来提高安全强度
							//-span.regcon-info 有被盗风险,建议使用字母、数字和符号两种及以上组合
							//-span.regcon-info 你的密码很安全
						div
							label 商品编号
							input(type='text' placeholder='请输入商品编号' name="gid")#input-gid
							//-span.regcon-info 请再次输入密码
							//-span.regcon-alert 两次密码输入不一致
						div
							label 原价
							input(type='text' placeholder='请输入原价' name="oldprice")#input-oldprice
							//-span.regcon-info 完成验证后，你可以用该邮箱登录和找回密码
							//-span.regcon-alert 格式有误
						div 
							label 现价
							input(type='text' placeholder='请输入现价' name="nowprice")#input-nowprice
							//-span.regcon-info 完成验证后，你可以用该手机登录和找回密码
							//-span.regcon-alert 格式有误
						div
							label 库存地
							input(type='text' placeholder='请输入库存地' name="gloc")#input-gloc
						div
							label 大图服务器路径
							input(type='text' placeholder='请输入大图服务器路径,使用分号分隔各个路径' name="mainsrc")#input-mainsrc
						div
							label 详情图服务器路径
							input(type='text' placeholder='请输入详情图服务器路径,使用分号分隔各个路径' name="detailsrc")#input-detailsrc
						div
							label 商品规格
							input(type='text' placeholder='请输入商品规格，采用“规格名1=规格值1；规格值2；&规格名2=规格值1；规格值2；' name="standard")#input-standard
							//-span.regcon-info
							//-span.regcon-alert
						input(type='checkbox')
						span 我已阅读并同意《商城用户注册协议》
						span#submit 提交
						//-input(type='submit' )
		include ../includes/footer.jade
		script(src='./bower_components/jquery/dist/jquery.min.js' type='text/javascript')
		script(src='./script/manager.js' type='text/javascript')