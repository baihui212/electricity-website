doctype
html
	head
		title #{title}
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width')
		script(src='/bundle.js')
		link(href='./style/publicStyle.css' rel='stylesheet' type='text/css')
		link(href='./bower_components/bootstrap/dist/css/bootstrap.css' rel='stylesheet' type='text/css')
		link(href='./style/detailPure.css' rel='stylesheet' type='text/css')
	body
		include ../includes/sidebar.jade
		include ../includes/header.jade
		include ../includes/nav.jade
		div.detail
			div.detail-img
				a(href='javascript:;').detail-img-main#imgMainWrap
					img(src='./images/detail/one-plus/main.jpg')#imgMain
					div#imgLoc
				div.manifyImg
					img(src='./images/detail/one-plus/main.jpg')
				ul.detail-img-list
					li
						a(href='javascript:;')
							img(src='./images/detail/one-plus/main.jpg')
					li
						a(href='javascript:;')
							img(src='./images/detail/one-plus/side.jpg')
					li
						a(href='javascript:;')
							img(src='./images/detail/one-plus/black-back.jpg')
				p.detail-share
					a(href='javascript:;')
						span.glyphicon.glyphicon-send
						span 分享
					a(href='javascript:;')
						span.glyphicon.glyphicon-star
						span 收藏商品
						span（66488人气）
